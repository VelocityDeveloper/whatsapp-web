<div class="d-flex">
	<button
		class="btn shadow-sm btn-sm get-qr"
		data-bs-toggle="modal"
		data-bs-target="#frameqrcode"
	>
		<box-icon name="qr"></box-icon>
		QR Code
	</button>
</div>
<div id="app">
	<div class="frame-chat">
		<div class="row m-0">
			<div class="col-4 col-md-3 p-0 position-relative">
				<div class="search-form">
					<input
						class="form-control rounded-0"
						placeholder="Search Contact.."
					/>
				</div>

				<div class="sidebar-chat sidebar-chat area-kontak">
					<ul class="list-group chat pb-5 rounded-0"></ul>
				</div>
			</div>
			<div class="col position-relative p-0 height-100vh">
				<div class="chat-header d-flex flex-row align-items-center">
					<div class="p-2">
						<img
							style="width:40px;"
							class="rounded-circle img-fluid pic-current"
							data-user=""
							src=""
							alt=""
						/>
					</div>
					<div class="p-2">
						<span class="current-name">
						</span>
					</div>
				</div>
				<div class="area-pesan chat-cols">
					<div class="chatarea">
					</div>
				</div>
				<div class="fixed-chatform">

					<form class="kirim-chat">
						<div class="row mx-0">
							<div class="col-10 d-flex">
								<textarea
									class="body-message form-control"
									placeholder=""
									rows="1"
								></textarea>
								<label for="lampiran" class="blue-100 lampiran form-label">
									<svg
										xmlns="http://www.w3.org/2000/svg"
										width="30"
										height="30"
										fill="currentColor"
										class="bi bi-paperclip"
										viewBox="0 0 16 16"
									>
										<path
											d="M4.5 3a2.5 2.5 0 0 1 5 0v9a1.5 1.5 0 0 1-3 0V5a.5.5 0 0 1 1 0v7a.5.5 0 0 0 1 0V3a1.5 1.5 0 1 0-3 0v9a2.5 2.5 0 0 0 5 0V5a.5.5 0 0 1 1 0v7a3.5 3.5 0 1 1-7 0V3z"
										></path>
									</svg>
								</label>
								<input id="lampiran" type="file" class="form-control d-none" />
							</div>
							<div class="col-2">
								<button class="btn btn-success w-100">
									<svg
										xmlns="http://www.w3.org/2000/svg"
										width="16"
										height="16"
										fill="currentColor"
										class="bi bi-send"
										viewBox="0 0 16 16"
									>
										<path
											d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"
										></path>
									</svg>
								</button>
							</div>

						</div>
					</form>

				</div>
				<ul class="list-group logs d-none">
				</ul>
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div
	class="modal fade"
	id="frameqrcode"
	tabindex="-1"
	aria-labelledby="exampleModalLabel"
	aria-hidden="true"
>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="exampleModalLabel">Scan QR Code</h1>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body">
				<img id="qrcode" src="" alt="qrcode" />
				<div class="status-login"></div>
			</div>
			<div class="modal-footer">
				<button
					type="button"
					class="btn btn-secondary"
					data-bs-dismiss="modal"
				>Close</button>
			</div>
		</div>
	</div>
</div>
<script
	src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"
	crossorigin="anonymous"
></script>
<script src="/js/chat.js" crossorigin="anonymous"></script>